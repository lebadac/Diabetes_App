<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F4F8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Enter Age -->
        <EditText
            android:id="@+id/etAge"
            android:hint="Age"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Select Gender -->
        <Spinner
            android:id="@+id/spGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp" />

        <!-- Enter BMI -->
        <EditText
            android:id="@+id/etBMI"
            android:hint="BMI"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Enter HbA1c -->
        <EditText
            android:id="@+id/etHbA1c"
            android:hint="HbA1c Level"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Enter Blood Glucose Level -->
        <EditText
            android:id="@+id/etBloodGlucose"
            android:hint="Blood Glucose Level"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Select Smoking History -->
        <Spinner
            android:id="@+id/spSmokingHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3" />


        <!-- Predict Button -->
        <Button
            android:id="@+id/btnPredict"
            android:text="ðŸš€ Predict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:padding="14dp"
            android:layout_marginBottom="20dp" />

        <!-- Prediction Result -->
        <TextView
            android:id="@+id/tvResult"
            android:text="Prediction result will be displayed here"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:background="#E0F2F1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
